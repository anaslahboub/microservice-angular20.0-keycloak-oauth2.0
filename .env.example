# Keycloak Server Configuration
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=your-realm-name

# JWT Resource Server Configuration
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://localhost:8080/realms/your-realm-name
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=http://localhost:8080/realms/your-realm-name/protocol/openid-connect/certs

# Auth Service Configuration (Spring Boot OAuth2 Client)
AUTH_SERVICE_PORT=8090
AUTH_SERVICE_CLIENT_ID=your-auth-client-id
AUTH_SERVICE_CLIENT_SECRET=your-auth-client-secret
AUTH_SERVICE_REDIRECT_URI=http://localhost:8090/login/oauth2/code/keycloak

# Inventory Service Configuration
INVENTORY_SERVICE_PORT=8091

# Angular Frontend Configuration
ANGULAR_CLIENT_ID=your-angular-client-id
ANGULAR_PORT=4200
ANGULAR_REDIRECT_URI=http://localhost:4200/
ANGULAR_SILENT_CHECK_SSO_URI=http://localhost:4200/assets/silent-check-sso.html

# Database Configuration
H2_CONSOLE_ENABLED=true
AUTH_DB_URL=jdbc:h2:mem:persons-db
INVENTORY_DB_URL=jdbc:h2:mem:product-db

# Google OAuth2 Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Development/Production Environment
ENVIRONMENT=development

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8090,http://localhost:8091

# Logging Level
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_KEYCLOAK=DEBUG