# Inventory Service Environment Variables
# Database Configuration for Inventory Service
INVENTORY_SERVICE_PORT=8091
SPRING_DATASOURCE_URL=jdbc:mysql://mysql-db:3306/inventory-db?createDatabaseIfNotExist=true
SPRING_DATASOURCE_USERNAME=anas
SPRING_DATASOURCE_PASSWORD=root
SPRING_DATASOURCE_DRIVER_CLASS_NAME=com.mysql.cj.jdbc.Driver

# JPA Configuration for Inventory Service
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_DATABASE_PLATFORM=org.hibernate.dialect.MySQL8Dialect

# Keycloak JWT Resource Server Configuration
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_ISSUER_URI=http://keycloak:8080/realms/plateforme-realm
SPRING_SECURITY_OAUTH2_RESOURCESERVER_JWT_JWK_SET_URI=http://keycloak:8080/realms/plateforme-realm/protocol/openid-connect/certs

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_KEYCLOAK=DEBUG

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8090,http://localhost:8091