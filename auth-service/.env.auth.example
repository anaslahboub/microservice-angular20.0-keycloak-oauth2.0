# Auth Service Environment Variables Template
# Copy this file to .env.auth and replace placeholder values with actual credentials

# Auth Service Configuration
AUTH_SERVICE_PORT=8090
AUTH_DB_URL=jdbc:mysql://mysql-db:3306/persons-db?createDatabaseIfNotExist=true
AUTH_DB_USERNAME=anas
AUTH_DB_PASSWORD=root

# Google OAuth2 Configuration
# Get these from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Keycloak OAuth2 Client Configuration
# Get these from your Keycloak admin console
AUTH_SERVICE_CLIENT_ID=your-keycloak-client-id
AUTH_SERVICE_CLIENT_SECRET=your-keycloak-client-secret

AUTH_SERVICE_REDIRECT_URI=http://localhost:8090/login/oauth2/code/keycloak

# Keycloak Server Configuration
# Note: issuer-uri is commented out to prevent auto-discovery issues
# SPRING_SECURITY_OAUTH2_CLIENT_PROVIDER_KEYCLOAK_ISSUER_URI=http://keycloak:8080/realms/plateforme-realm

# Logging Configuration
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_KEYCLOAK=DEBUG

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8090,http://localhost:8091